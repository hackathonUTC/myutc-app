html(ng-app="app")
  body(ng-controller="iutc")
    link(href='css/bootstrap.css', rel='stylesheet')
    link(href='iutc.css', rel='stylesheet')
    .container
      .row
        .col-md-3
          .btn-panel.btn-panel-conversation
            a.btn.col-md-6.send-message-btn(href='', role='button')
              i.fa.fa-search
              |  Search
            a.btn.col-md-6.send-message-btn.pull-right(href='', role='button')
              i.fa.fa-plus
              |  New Message
        .col-md-offset-1.col-md-7
          .btn-panel.btn-panel-msg
            a.btn.col-md-3.send-message-btn.pull-right(href='', role='button')
              i.fa.fa-gears
              |  Settings
      .row
        .conversation-wrap.col-md-3
          .media.conversation(ng-repeat="salon in salons")
            a.pull-left(href='#')
              img.media-object(data-src='holder.js/64x64', alt='64x64', style='width: 50px; height: 50px;', src='data:image/png;base64,')
            .media-body
              h5.media-heading {{salon}}
              small Hello
        .message-wrap.col-md-8
          .msg-wrap
            .alert.alert-info.msg-date
              strong Today
            .media.msg(ng-repeat="msg in messages")
              a.pull-left(href='#')
                img.media-object(data-src='holder.js/64x64', alt='64x64', style='width: 32px; height: 32px;', src='data:image/png;base64,')
              .media-body
                small.pull-right.time
                  i.fa.fa-clock-o
                  |  {{msg.date | date : 'shortTime'}}
                h5.media-heading {{msg.author}}
                small.col-md-10
                  | {{msg.text}}
          .send-wrap
            input.form-control.send-message(placeholder='Write a reply...' ng-model="messageEdited" ng-keypress="keyPressed($event)")
          .btn-panel
            a.col-md-3.btn.send-message-btn(href='', role='button')
              i.fa.fa-cloud-upload
              |  Add Files
            a.col-md-4.text-right.btn.send-message-btn.pull-right(href='', role='button')
              i.fa.fa-plus
              |  Send Message
  script(type="application/javascript", src="iutc.js")
